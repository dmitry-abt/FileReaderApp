<Window x:Class="FileReaderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Processor" Height="500" Width="800">
    <Grid>
        <!-- Input File Selection -->
        <Label Content="Input File(s):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputFilePathTextBox" HorizontalAlignment="Stretch" Margin="100,10,100,0" VerticalAlignment="Top" IsReadOnly="True"/>
        <Button x:Name="BrowseInputFileButton" Content="Browse" HorizontalAlignment="Right" Margin="10,10,10,0" VerticalAlignment="Top" Width="80" Click="BrowseInputFileButton_Click"/>

        <!-- Output Folder Selection -->
        <Label Content="Output Folder:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OutputFolderPathTextBox" HorizontalAlignment="Stretch" Margin="100,40,100,0" VerticalAlignment="Top" IsReadOnly="True"/>
        <Button x:Name="BrowseOutputFolderButton" Content="Browse" HorizontalAlignment="Right" Margin="10,40,10,0" VerticalAlignment="Top" Width="80" Click="BrowseOutputFolderButton_Click"/>

        <!-- Settings -->
        <Label Content="Min Word Length:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MinWordLengthTextBox" HorizontalAlignment="Left" Margin="120,80,0,0" VerticalAlignment="Top" Width="50" Text="3"/>

        <!-- Process Button -->
        <Button x:Name="ProcessButton" Content="Process Files" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="100" Click="ProcessButton_Click"/>

        <!-- Log -->
        <TextBox x:Name="LogTextBox" HorizontalAlignment="Stretch" Margin="10,180,10,10" VerticalAlignment="Stretch" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>