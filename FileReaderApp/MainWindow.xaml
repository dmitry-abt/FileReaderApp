<Window x:Class="FileReaderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Reader" Height="400" Width="600">
    <Grid>
        <Button x:Name="OpenFileButton" Content="Open File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Click="OpenFileButton_Click"/>
        <TextBox x:Name="FileContentTextBox" HorizontalAlignment="Stretch" Margin="10,40,10,100" VerticalAlignment="Stretch" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <Label Content="Min word length:" HorizontalAlignment="Left" Margin="10,0,0,60" VerticalAlignment="Bottom"/>
        <TextBox x:Name="MinWordLengthTextBox" HorizontalAlignment="Left" Margin="120,0,0,60" VerticalAlignment="Bottom" Width="50" Text="3"/>
        <Button x:Name="FilterButton" Content="Filter" HorizontalAlignment="Left" Margin="180,0,0,60" VerticalAlignment="Bottom" Width="100" Click="FilterButton_Click"/>
    </Grid>
</Window>
